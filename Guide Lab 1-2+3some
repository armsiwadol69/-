'''Setting the Data Type'''
#X = "Hello World"
ตัวแปร = "Hello World"
print(type(ตัวแปร))
#X = 20
ตัวแปร = 20
print(type(ตัวแปร))
#X = 20.5
ตัวแปร = 20.5
print(type(ตัวแปร))
X = Ij
ตัวแปร = 1j
print(type(ตัวแปร))
#X = [“apple”,”banana”,”cherry”]
ตัวแปร = ["apple","banana","cherry"]
print(type(ตัวแปร))
#X = ("apple","banana","cherry")
ตัวแปร = ("apple","banana","cherry")
print(type(ตัวแปร))
#X = range(6)
ตัวแปร = range(6)
print(type(ตัวแปร))
#X = {"name":"John","age":36}
ตัวแปร = {"name":"John","age":36}
print(type(ตัวแปร))
#X = frozenset({"apple","banana","cherry"})
ตัวแปร = frozenset({"apple","banana","cherry"})
print(type(ตัวแปร))
#x=True
ตัวแปร = True
print(type(ตัวแปร))
#X = B"Hello"
ตัวแปร = b"hello"
print(type(ตัวแปร))
#X = bytearray(5)
ตัวแปร = bytearray(5)
print(type(ตัวแปร))
#X = memoryview(bytes(5))
ตัวแปร = memoryview(bytes(5))
print(type(ตัวแปร))


'''Setting the Specific Data Type'''
#X = "Hello World"
ตัวแปร = str("Hello World")
print(type(xx1))
#X = 20
ตัวแปร = int(20)
print(type(ตัวแปร))
#X = float(20.5)
ตัวแปร = float(20.5)
print(type(ตัวแปร))
#ตัวแปร X = Ij
ตัวแปร = complex(1j)
print(type(ตัวแปร))
#X =list(([“apple”,”banana”,”cherry”))
ตัวแปร = list(("apple","banana","cherry"))
print(type(ตัวแปร))
# X = tuple(("apple","banana","cherry"))
ตัวแปร = tuple(("apple","banana","cherry"))
print(type(ตัวแปร))
#X = range(6)
ตัวแปร = range(6)
print(type(ตัวแปร))
# X = dict("name":"John","age":36)
ตัวแปร = dict(name="John",age=36)
print(type(xx7))
#ตัวแปร X = frozenset(("apple","banana","cherry"))
ตัวแปร = frozenset(("apple","banana","cherry"))
print(type(ตัวแปร))
# x=bool(5)
ตัวแปร = bool(5)
print(type(ตัวแปร))
# X = bytes(5)
ตัวแปร = bytes(5)
print(type(ตัวแปร))
#X = bytearray(5)
ตัวแปร = bytearray(5)
print(type(ตัวแปร))
# X = memoryview(bytes(5))
ตัวแปร = memoryview(bytes(5))
print(type(ตัวแปร))

